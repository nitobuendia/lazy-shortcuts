{
  "manifest_version": 3,
  "name": "Lazy Shortcuts",
  "version": "1.0",
  "description": "Lazy Shortcuts allows you to create local custom short URLs.",
  "icons": {
    "32": "img/extension-icon-32.png",
    "64": "img/extension-icon-64.png",
    "128": "img/extension-icon-128.png",
    "256": "img/extension-icon-256.png"
  },
  "permissions": [
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "options.html"
  },
  "options_page": "options.html",
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirectRules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
